<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SOLVO - @ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --danger: #f72585;
            --warning: #ff9e00;
            --dark: #212529;
            --light: #f8f9fa;
        }

        body {
            background-color: #f5f7fb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            box-shadow: 0 4px 20px rgba(67, 97, 238, 0.15);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: white !important;
        }

        .nav-link {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            transition: all 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                background: rgba(255,255,255,0.1);
                color: white !important;
            }

        .sidebar {
            background: white;
            min-height: calc(100vh - 56px);
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
        }

        .sidebar-sticky {
            position: sticky;
            top: 1rem;
        }

        .sidebar .nav-link {
            color: var(--dark) !important;
            padding: 0.75rem 1rem;
            margin-bottom: 0.25rem;
            border-radius: 8px;
        }

            .sidebar .nav-link:hover, .sidebar .nav-link.active {
                background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
                color: white !important;
            }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .stat-card {
            padding: 1.5rem;
            text-align: center;
        }

            .stat-card .number {
                font-size: 2rem;
                font-weight: 700;
                margin: 0.5rem 0;
            }

        .income-card {
            border-left: 5px solid var(--primary);
        }

        .expense-card {
            border-left: 5px solid var(--danger);
        }

        .savings-card {
            border-left: 5px solid var(--success);
        }

        .goal-card {
            border-left: 5px solid var(--warning);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success) 0%, #2a9d8f 100%);
            border: none;
        }

        .progress {
            height: 20px;
            border-radius: 10px;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: var(--dark);
            background: rgba(67, 97, 238, 0.05);
        }

        .auth-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        }

        .auth-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-wallet2 me-2"></i>SOLVO
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <span class="nav-link">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Auth" asp-action="Logout">
                                <button type="submit" class="nav-link btn btn-link">
                                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 col-lg-2 p-0">
                    <div class="sidebar p-3">
                        <div class="sidebar-sticky">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">
                                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Income" ? "active" : "")" href="/Income">
                                        <i class="bi bi-arrow-up-circle me-2"></i>Income
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Expense" ? "active" : "")" href="/Expense">
                                        <i class="bi bi-arrow-down-circle me-2"></i>Expenses
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Savings" ? "active" : "")" href="/Savings">
                                        <i class="bi bi-piggy-bank me-2"></i>Savings
                                    </a>
                                </li>
                                <li class="nav-item mt-4">
                                    <hr>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Income/Create">
                                        <i class="bi bi-plus-circle text-success me-2"></i>Add Income
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Expense/Create">
                                        <i class="bi bi-plus-circle text-danger me-2"></i>Add Expense
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Savings/Create">
                                        <i class="bi bi-plus-circle text-primary me-2"></i>Add Goal
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Content -->
                <main class="col-md-9 ms-sm-auto col-lg-10 px-4 py-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>