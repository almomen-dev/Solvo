@model Solvo.Models.SavingsGoal
@{
    ViewData["Title"] = "Add Savings Goal";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header bg-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle text-success me-2"></i>Add New Savings Goal</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="TargetAmount" class="form-label">Target Amount</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="TargetAmount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="TargetAmount" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CurrentAmount" class="form-label">Current Amount</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="CurrentAmount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="CurrentAmount" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TargetDate" class="form-label">Target Date</label>
                        <input asp-for="TargetDate" type="date" class="form-control" />
                        <span asp-validation-for="TargetDate" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle me-2"></i>Create Goal
                        </button>
                        <a href="/Savings" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Set minimum date to tomorrow
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        document.getElementById('TargetDate').min = tomorrow.toISOString().split('T')[0];
        document.getElementById('TargetDate').value = new Date(tomorrow.setMonth(tomorrow.getMonth() + 1)).toISOString().split('T')[0];
    </script>
}