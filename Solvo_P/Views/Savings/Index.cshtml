@model List<Solvo.Models.SavingsGoal>
@{
    ViewData["Title"] = "Savings Goals";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-piggy-bank text-success me-2"></i>Savings Goals</h2>
    <a href="/Savings/Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Add Goal
    </a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var goal in Model)
        {
            var progress = (goal.CurrentAmount / goal.TargetAmount) * 100;
            var daysLeft = (goal.TargetDate - DateTime.Now).Days;

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">Goal #@goal.Id</h5>
                            <span class="badge bg-info">@daysLeft days left</span>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span>Progress</span>
                                <span>@progress.ToString("N1")%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" style="width: @progress%"></div>
                            </div>
                        </div>

                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <div class="text-muted small">Current</div>
                                <div class="h5 text-success">$@goal.CurrentAmount.ToString("N2")</div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small">Target</div>
                                <div class="h5 text-primary">$@goal.TargetAmount.ToString("N2")</div>
                            </div>
                        </div>

                        <div class="text-center mb-3">
                            <small class="text-muted">Target Date: @goal.TargetDate.ToString("MMM dd, yyyy")</small>
                        </div>

                        <div class="d-grid gap-2">
                            <form method="post" action="/Savings/UpdateCurrent/@goal.Id" class="input-group">
                                <input type="number" step="0.01" name="currentAmount" class="form-control" placeholder="Update amount" value="@goal.CurrentAmount" />
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="bi bi-check"></i>
                                </button>
                            </form>

                            <div class="btn-group">
                                <a href="/Savings/Edit/@goal.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <form method="post" action="/Savings/Delete/@goal.Id" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-flag" style="font-size: 3rem; color: #ccc;"></i>
        <h4 class="mt-3">No savings goals found</h4>
        <p class="text-muted">Start by setting your first savings goal.</p>
        <a href="/Savings/Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add Goal
        </a>
    </div>
}