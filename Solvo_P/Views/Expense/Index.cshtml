@model List<Solvo.Models.Expense>
@{
    ViewData["Title"] = "Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-arrow-down-circle text-danger me-2"></i>Expenses</h2>
    <a href="/Expense/Create" class="btn btn-danger">
        <i class="bi bi-plus-circle me-2"></i>Add Expense
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model)
                        {
                            <tr>
                                <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                <td>@expense.Category</td>
                                <td>@(expense.Description ?? "-")</td>
                                <td class="text-danger">$@expense.Amount.ToString("N2")</td>
                                <td>
                                    <a href="/Expense/Edit/@expense.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="/Expense/Delete/@expense.Id" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <td colspan="3"><strong>Total</strong></td>
                            <td><strong class="text-danger">$@Model.Sum(e => e.Amount).ToString("N2")</strong></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-cart" style="font-size: 3rem; color: #ccc;"></i>
                <h4 class="mt-3">No expense records found</h4>
                <p class="text-muted">Start by adding your first expense.</p>
                <a href="/Expense/Create" class="btn btn-danger">
                    <i class="bi bi-plus-circle me-2"></i>Add Expense
                </a>
            </div>
        }
    </div>
</div>