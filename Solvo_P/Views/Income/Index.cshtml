@model List<Solvo.Models.Income>
@{
    ViewData["Title"] = "Income";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-arrow-up-circle text-primary me-2"></i>Income</h2>
    <a href="/Income/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Add Income
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Source</th>
                            <th>Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in Model)
                        {
                            <tr>
                                <td>@income.Date.ToString("MMM dd, yyyy")</td>
                                <td>@income.Source</td>
                                <td class="text-success">$@income.Amount.ToString("N2")</td>
                                <td>
                                    <a href="/Income/Edit/@income.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" action="/Income/Delete/@income.Id" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <td colspan="2"><strong>Total</strong></td>
                            <td><strong class="text-success">$@Model.Sum(i => i.Amount).ToString("N2")</strong></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-wallet2" style="font-size: 3rem; color: #ccc;"></i>
                <h4 class="mt-3">No income records found</h4>
                <p class="text-muted">Start by adding your first income source.</p>
                <a href="/Income/Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Income
                </a>
            </div>
        }
    </div>
</div>